<html lang="en">
<header>
  <style>
    
    .col-form-label{
      text-align: right;
    }
    
  </style>
</header>
<%= bootstrap_form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <font color="red">All Fields Marked with * Required</font>
  
<div class="container">

  <br>
    <% @ord_article  = @article %>
    
    <div class="row">
    <label for="colFormLabel" class="col-sm-2 col-form-label"><strong>*Date:</strong></label>
    <div class="col-sm-10"><%= form.date_field :date, required: true, hide_label: true, value: Date.today%></div>
    </div>

    <div class="row">
    <label for="colFormLabel" class="col-sm-2 col-form-label"><strong>*Title:</strong></label>
    <div class="col-sm-10"><%= form.text_field :title, required: true, hide_label: true, placeholder: "Post Title" %></div>
    </div>
 
     <div class="row">
     <label for="colFormLabel" class="col-sm-2 col-form-label"><strong>*Tag:</strong></label>
     <div class="col-sm-10">
       <%= form.select :tag, options_for_select( @tagList, @ord_article), required: true, hide_label: true %>
      </div>
     </div>


    <div class="row">
    <label for="colFormLabel" class="col-sm-2 col-form-label"><strong>*Text:</strong></label>
    <div class="col-sm-10"><%= form.text_area :body, required: true, hide_label: true, placeholder: "Enter Text Here..."%></div>
    </div>
    
    <div class="row">
    <label for="colFormLabel" class="col-sm-2 col-form-label"><strong>File:</strong></label>
    <div class="col-sm-10"><%= form.file_field :file, hide_label: true, placeholder: "Must be a PDF"%></div>
    </div>

  
    <div class="actions">
      <button type="submit" class="btn btn-success">Submit</button>
    </div>
</div>



  <% end %>




</html>