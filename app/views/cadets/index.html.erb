<p id="notice"><%= notice %></p>

<h2>Cadets</h2>

<table>
  <thead>
    <tr>
      <th>Cadet ID</th>
      <th>Last Name</th>
      <th>First Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cadets.each do |cadet| %>
      <tr>
        <td><%= cadet.cadetID %></td>
        <td><%= cadet.lastName %></td>
        <td><%= cadet.firstName %></td>
        <td><%= link_to 'View Cadet Profile', cadet %></td>
        <td><%= link_to 'Edit', edit_cadet_path(cadet) %></td>
        <td><%= link_to 'Remove', cadet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cadet', new_cadet_path %>
