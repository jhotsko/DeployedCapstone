</head>
<div class="container text-left">
  <p id="notice"><%= notice %></p>
  <h2 class="display-4">Cadets</h2>
  <%= link_to 'New Cadet', new_cadet_path %>
</div>
<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Cadet Name</th>
      <th scope="col">Update Cadet</th>
      <th scope="col">Delete Cadet</th>
    </tr>
  </thead>
  <tbody>
    <% @cadets.each do |cadet| %>
      <tr>
        <td><%= link_to "#{cadet.firstName} #{cadet.lastName}", cadet %></td>
        <td><%= link_to 'Edit', edit_cadet_path(cadet) %></td>
        <td><%= link_to 'Remove', cadet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

