<p id="notice"><%= notice %></p>

<h2>Cadet <%= @cadet.lastName %></h2>

<%= link_to 'Edit', edit_cadet_path(@cadet) %>

<p>
  <strong>Last Name:</strong>
  <%= @cadet.lastName %>
</p>

<p>
  <strong>First Name:</strong>
  <%= @cadet.firstName %>
</p>

<p>
  <strong>Email:</strong>
  <%= @cadet.email %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= @cadet.phoneNumber %>
</p>

<p>
  <strong>School:</strong>
  <%= @cadet.school %>
</p>

<p>
  <strong>Position:</strong>
  <%= @cadet.position %>
</p>

<p>
  <strong>Course:</strong>
  <%= @cadet.course %>
</p>

<p>
  <strong>Grad Year:</strong>
  <%= @cadet.gradYear %>
</p>

<p>
  <strong>Flight:</strong>
  <%= @cadet.flight %>
</p>

<p>
  <strong>Username:</strong>
  <%= @cadet.username %>
</p>

<p>
  <strong>Password:</strong>
  <%= @cadet.password %>
</p>

<h3>Attendance:</h3>
<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cadet.attendances.each do |attendance| %>
      <tr>
        <td><%= link_to "#{attendance.event.eventDate}", attendance.event %></td>
        <td><%= attendance.attended %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>