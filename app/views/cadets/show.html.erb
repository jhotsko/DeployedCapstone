<head>
  <style>
    span{
      font-size: 24px;
    }
  </style>
</head>
<p id="notice"><%= notice %></p>

<!--Cadet Information-->
<h2 class = "text-left display-4">Cadet <%= @cadet.lastName %></h2>

<p class="text-left">
  <strong>Last Name:</strong>
  <%= @cadet.lastName %>
</p>

<p class="text-left">
  <strong>First Name:</strong>
  <%= @cadet.firstName %>
</p>

<p class="text-left">
  <strong>Email:</strong>
  <%= @cadet.email %>
</p>

<p class="text-left">
  <strong>Phone Number:</strong>
  <%= "(#{(@cadet.phoneNumber.to_s)[0, 3]}) #{(@cadet.phoneNumber.to_s)[3, 3]}-#{(@cadet.phoneNumber.to_s)[6, 4]}" %>
</p>

<p class="text-left">
  <strong>School:</strong>
  <%= @cadet.school %>
</p>

<p class="text-left">
  <strong>Position:</strong>
  <%= @cadet.position %>
</p>

<p class="text-left">
  <strong>Course:</strong>
  <%= @cadet.course %>
</p>

<p class="text-left">
  <strong>Grad Year:</strong>
  <%= @cadet.gradYear %>
</p>

<p class="text-left">
  <strong>Flight:</strong>
  <%= @cadet.flight %>
</p>


<!--Cadet Attendance Table-->
<h3 class="font-weight-light" style = "text-align: left; margin-top: 20px;">Attendance</h3>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Event</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
     <%#@ord_cadets = @cadet.attendances.joins(:event).order("events.eventDate ASC")%>
     <%@ord_cadets = @cadet.attendances %>
    <% @ord_cadets.each do |attendance| %>
      <tr>
        <td><%= link_to "#{attendance.event.eventDate}", attendance.event %></td>
        <td><%= attendance.attended %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to 'Edit', edit_cadet_path(@cadet), :class => "btn btn-secondary btn-warning btn-sm"%>

  <%= link_to 'Remove', @cadet, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-secondary btn-danger btn-sm"  %> 
  <br>
</div>

<br>
<!-- Back to Top Button -->
<button onclick="topFunction()" type="button" class="btn btn-dark">Back to Top</button>
<script>
  function topFunction() {
    document.body.scrollTop = 0; // For Safari
    document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
  }
</script>