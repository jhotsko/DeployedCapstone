<%= form_with(model: cadet, local: true) do |form| %>
  <% if cadet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cadet.errors.count, "error") %> prohibited this cadet from being saved:</h2>

      <ul>
        <% cadet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <font color="red">All Fields Required *</font> 

  <p></p>
  <div style="text-align: center;">
    <div  style="display: inline-block; text-align: left;">
      <div class="field">
        <strong><%= form.label :lastName, "Last Name:" %></strong>
        <%= form.text_field :lastName, maxlength: 50 %>
      </div>
  
      <p></p>

      <div class="field">
        <strong><%= form.label :firstName,"First Name:" %></strong>
        <%= form.text_field :firstName, maxlength: 50 %>
      </div>
  
      <p></p>

      <div class="field">
        <strong><%= form.label "Email:" %></strong>
        <%= form.text_field :email, maxlength: 100 %>
        <!--input pattern="/^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/" required /-->
      </div>
  
      <p></p>

      <div class="field">
        <strong><%= form.label :phoneNumber,"Phone Number:" %></strong>
        <%= form.text_field :phoneNumber, maxlength: 50 %>
      </div>
      <p></p>
      <div class="field">
          <strong><%= form.label "School:" %></strong>
          <%= form.select(:school) do %>
            <% ['Xavier University', 'Delgado Community College', 
            'Dillard University', 'University of New Orleans', 
            'University of Holy Cross', 'Loyola University', 
            'Lousiana State University Nursing School', 
            'Southern University of New Orleans', 'Tulane University'].each do |c| -%>
            <%= content_tag(:option, c) %>
            <% end %>
          <% end %>
      </div>
  
      <p></p>

          <div class="field">
            <strong><%= form.label "Position:" %></strong>
            <%= form.select(:position) do %>
              <% ['Cadet Wing Commander', 'Mission Support Group Commander', 
              'Operations Group Commander', 'Squadron Commander', 
              'A Flight Commander', 'B Flight Commander', 'Cadet'].each do |c| -%>
              <%= content_tag(:option, c) %>
              <% end %>
            <% end %>
          </div>
  
      <p></p>

          <div class="field">
            <strong><%= form.label "Course:" %></strong>
            <%= form.select(:course) do %>
              <% ['POC', 'GMC'].each do |c| -%>
              <%= content_tag(:option, c) %>
              <% end %>
            <% end %>
          </div>
  
      <p></p>

      <div class="field">
       <strong> <%= form.label :gradYear,"Graduation Year:" %></strong>
        <%= form.select(:gradYear) do %>
          <% ['2019','2020', '2021', '2022', '2023', '2024'].each do |c| -%>
          <%= content_tag(:option, c) %>
          <% end %>
        <% end %>
    
      </div>
  
      <p></p>

          <div class="field">
            <strong><%= form.label "Flight:" %></strong>
            <%= form.select(:flight) do %>
              <% ['Alpha', 'Bravo'].each do |c| -%>
              <%= content_tag(:option, c) %>
              <% end %>
            <% end %>
          </div>
  
      <p></p>

      <div class="field">
        <strong><%= form.label "Username:" %></strong>
        <%= form.text_field :username, maxlength: 100 %>
      </div>
  
      <p></p>

      <div class="field">
        <strong><%= form.label "Password:" %></strong>
        <%= form.password_field :password, maxlength: 100 %>
      </div>
  
      <p></p>
    </div>
  </div>

  <div class="actions">
    <p>
      <p></p>
      <%= form.submit %>
    </p>
    
  </div>
<% end %>