<%= form_with(model: cadet, local: true) do |form| %>
  <% if cadet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cadet.errors.count, "error") %> prohibited this cadet from being saved:</h2>

      <ul>
        <% cadet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <font color="red">All Fields Required *</font>
  
  <br>
<div style="text-align: center;">
  <div  style="display: inline-block; text-align: left;">
  <div class="field">
    <strong><%= form.label "First Name:" %></strong><br>
    <%= form.text_field :firstName %>
  </div>
  
  <div class="field">
    <strong><%= form.label "Last Name:" %></strong><br>
    <%= form.text_field :lastName %>
  </div>

  <div class="field">
    <strong><%= form.label "Email:" %></strong><br>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <strong><%= form.label "Phone Number:" %></strong><br>
    <%= form.text_field :phoneNumber %>
  </div>

  <div class="field">
    <strong><%= form.label "School:" %></strong><br>
    <%= form.select(:school) do %>
      <% ['Xavier University', 'Delgado Community College', 
      'Dillard University', 'University of New Orleans', 
      'University of Holy Cross', 'Loyola University', 
      'Lousiana State University Nursing School', 
      'Southern University of New Orleans', 'Tulane University'].each do |c| -%>
      <%= content_tag(:option, c) %>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <strong><%= form.label "Position:" %></strong><br>
    <%= form.select(:position) do %>
      <% ['Cadet Wing Commander', 'Mission Support Group Commander', 
      'Operations Group Commander', 'Squadron Commander', 
      'A Flight Commander', 'B Flight Commander', 'Cadet'].each do |c| -%>
      <%= content_tag(:option, c) %>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <strong><%= form.label "Course:" %></strong><br>
    <%= form.select(:course) do %>
      <% ['POC', 'GMC'].each do |c| -%>
      <%= content_tag(:option, c) %>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <strong><%= form.label "Graduation Year:" %></strong><br>
    <%= form.number_field :gradYear, :value => Date.today.year %>
  </div>

  <div class="field">
    <strong><%= form.label "Flight:" %></strong><br>
    <%= form.select(:flight) do %>
      <% ['Alpha', 'Bravo'].each do |c| -%>
      <%= content_tag(:option, c) %>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <strong><%= form.label "Username:" %></strong><br>
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <strong><%= form.label "Password:" %></strong><br>
    <%= form.password_field :password %>
  </div>
  
  <div class="field">
    <strong><%= form.label "Password Confirmation:" %></strong><br>
    <%= form.password_field :password_confirmation %>
  </div>
  
  <br>

  <div class="actions">
    <button type="submit" class="btn btn-success btn-sm">Submit</button>
  </div>
  </div>
</div>
<% end %>

