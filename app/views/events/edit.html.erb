<h2>Editing Event</h2>

<%= link_to 'Show', @event %>

<%= render 'form', event: @event %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Attendance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event.attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.cadet.firstName %></td>
        <td><%= attendance.attended %></td>
        <div class="field">
          <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

