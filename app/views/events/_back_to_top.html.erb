<!-- Back to Top Button -->
<button onclick="topFunction()" type="button" class="btn btn-dark"><i class="fas fa-arrow-circle-up"></i> Back to Top</button>
<script>
  function topFunction() {
    document.body.scrollTop = 0; // For Safari
    document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
  }
</script>