<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Eventid</th>
      <th>Eventdate</th>
      <th>Primarytype</th>
      <th>Subtype</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.eventID %></td>
        <td><%= event.eventDate %></td>
        <td><%= event.primaryType %></td>
        <td><%= event.subType %></td>
        <td><%= event.details %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(id: event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%=link_to 'Take Attendance', event_takeAttendance_path(event_id: event.id)%> </td> <!--takeAttendance_path(event)-->
      </tr>
    <% end %>
  </tbody>
</table>

