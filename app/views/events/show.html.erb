<head>
  <style>
    .event-info{
      text-align: left;
    }
    span{
      font-size: 24px;
    }
  </style>
</head>
<p id="notice"><%= notice %></p>
<div class="event-info">
  <h2 class="display-4" style= "text-align: left;">Event Info <span><%= link_to 'Edit', edit_event_path(@event) %></span></h2>
  <h3><%= @event.eventDate %></h3>
  
  <p>
    <strong>Primarytype:</strong>
    <%= @event.primaryType %>
  </p>
  
  <p>
    <strong>Subtype:</strong>
    <%= @event.subType %>
  </p>
  
  <p>
    <strong>Details:</strong>
    <%= @event.details %>
  </p>
</div>

<h3 class="font-weight-light" style = "text-align: left; margin-top: 80px;">Attendance</h3>
<table class = "table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Attendance</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @event.attendances.each do |attendance| %>
      <tr>
        <td><%= link_to "#{attendance.cadet.firstName} #{attendance.cadet.lastName}", attendance.cadet %></td>
        <td><%= attendance.attended %></td>
        <td><%= link_to 'Delete', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
