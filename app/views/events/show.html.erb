
<%= javascript_include_tag "sort_table" %>

<head>
  <style>
    .event-info{
      text-align: center;
    }
    span{
      font-size: 24px;
    }
  </style>
</head>

<!--Event Information-->
<p id="notice"><%= notice %></p>

<div class="event-info" style="text-align: center">
  <h2 class="display-4" style="margin-bottom:20px; text_align: left">Event Details: <%= @event.eventDate %> </h2>
  <div>
</div>


  <div style="text-align: center;">
    <div  style="display: inline-block; text-align: left;">
      <p>
        <strong>Primary Type:</strong>
        <%= @event.primaryType %>
      </p>
      <p>
        <strong>Subtype:</strong>
        <%= @event.subType %>
      </p>
      <p>
        <strong>Details:</strong>
        <%= @event.details %>
      </p>
    </div>
  </div>
  
</div>

<% if (Cadet.find_by(id: session[:cadet_id]).position != "Cadet") %>  
  <!--Event Attendance Table-->
  <h2 class="font-weight-light" style = "text-align: left; margin-top: 20px;">Attendance</h2>
  <table class = "table table-striped table-bordered", id = "table">
    <thead class="thead-dark">
      <tr>
        <th scope="col", onclick="sortTable(0)" onMouseOver="this.style.color='yellow'", onMouseOut="this.style.color='#FFF'">Name</th>
        <th scope="col", onclick="sortTable(1)" onMouseOver="this.style.color='yellow'", onMouseOut="this.style.color='#FFF'">Attendance</th>
      </tr>
    </thead>
    <tbody>
      <% @ord_attendances = @event.attendances %>
      <% @ord_attendances.each do |attendance| %>
        <tr>
          <td><%= link_to "#{attendance.cadet.lastName}, #{attendance.cadet.firstName}", attendance.cadet %></td>
          <% if attendance.attended === "Absent"%>
            <td class = "bg-danger text-white"><%= attendance.attended %></td>
          <% elsif attendance.attended === "Present" %>
             <td  class ="bg-success text-white"><%= attendance.attended %></td>
          <% elsif attendance.attended === "Tardy" %>
             <td  class ="bg-warning text-black"><%= attendance.attended %></td>
          <% else %>
             <td><%= attendance.attended %></td>
          <% end %>            
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <%= link_to 'Edit Details and Attendance', edit_event_path(@event), :class => "btn btn-secondary btn-info btn-sm" %>
  
  <%= link_to 'Delete Event', @event, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-secondary btn-danger btn-sm"  %> 
  <br>
  <br>
  
<%= render "back_to_top" %>

<%end%>