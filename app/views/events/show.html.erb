<p id="notice"><%= notice %></p>
<h2><%= @event.eventDate %></h2>

<%= link_to 'Edit', edit_event_path(@event) %> 

<p>
  <strong>Primarytype:</strong>
  <%= @event.primaryType %>
</p>

<p>
  <strong>Subtype:</strong>
  <%= @event.subType %>
</p>

<p>
  <strong>Details:</strong>
  <%= @event.details %>
</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Attendance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% #@ord_attendances = @event.attendances.joins(:cadet).order("cadets.lastName ASC") %>
    <% @ord_attendances = @event.attendances %>
    <% @ord_attendances.each do |attendance| %>
      <tr>
        <td><%= link_to "#{attendance.cadet.lastName}, #{attendance.cadet.firstName}", attendance.cadet %></td>
        <td><%= attendance.attended %></td>
        <td><%= link_to 'Delete', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- Back to Top Button -->
<button onclick="topFunction()" id="myBtn" title="Go to top">Back to Top</button>
<script>
  function topFunction() {
    document.body.scrollTop = 0; // For Safari
    document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
  }
</script>