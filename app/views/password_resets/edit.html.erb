<html lang="en">

<head>
  <style>
    span {
      font-size: 24px;
    }
  </style>
</head>

<h2 class="display-4">Reset Password</h2>

<%= form_for @cadet, :url => password_reset_path(params[:id]) do |f| %>
  <% if @cadet.errors.any? %>
    <div class='error_messages'>
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @cadet.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <label for="password" class="col-sm-3 col-form-label"><strong>New Password: </strong><br></label>
      <div class="col-sm">
        <%= f.password_field :password, required: true, hide_label: true %>
      </div>
  </div>
  
  <div class="form-group row">
    <label for="password_confirmation" class="col-sm-3 col-form-label"><strong>Confirm Password: </strong><br></label>
      <div class="col-sm">
        <%= f.password_field :password_confirmation, required: true, hide_label: true%>
      </div>
  </div>
  
  <%= f.submit "Update Password", class: "btn btn-default btn-primary" %> 
<% end %>