<html lang="en">
<header>
  <style>
    
  </style>
</header>

<p id="notice"><%= notice %></p>

<div class="container" style="height: 100px; background-color: #dbe6c1; display: flex;">
<h2 class="display-4" style="margin-top: 30px; vertical-align: middle; margin: auto;">Grades for <%= link_to "C/#{@cadet.firstName} #{@cadet.lastName}", @cadet %></h2>
</div>

<br>

<div class="row">
  <div class="column"><p><strong>Average: </strong><%= @cadet.grade_average %>%</p></div>
</div>

<div class="container">
  <div class="col md"></div>
    
  <div class="col md  ">
    <% @grades.each do |grade| %>
      <div class="blog-post">
        <div class="row" style="text-align:left;"><h3><%= grade.warriorknowledge.name %></h3></div>
        <div class="row" style="text-align:left;"><%= grade.warriorknowledge.date_assigned %></div>
        <div class="row" style="text-align:left;"><%= grade.score %>%</div>
        <hr>
      </div>
    <% end %>
  </div>

  <div class="col md"></div>
</div>

<br>
