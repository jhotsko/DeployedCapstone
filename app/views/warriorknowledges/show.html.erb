<html lang="en">
<header>
  <style>
    .btn-secondary{
    
    }
  </style>
</header>

<p id="notice"><%= notice %></p>

<div class="card border-0 shadow my-5">
  <div class="card-body p-5">
    <h1 class="font-weight-light" style="text-align: left;"><%= @warriorknowledge.name.titleize %></h1> 
    <p style="text-align: left;"><strong><%= @warriorknowledge.date_assigned %></p>
    <p style="text-align: left;"><%= @warriorknowledge.num_questions %> questions</p>
  </div>
</div>


<% if (Cadet.find_by(id: session[:cadet_id]).position != "Cadet") %>  
    <div>
      <%= link_to '<i class="far fa-edit"></i> Edit'.html_safe, edit_warriorknowledge_path(@warriorknowledge), :class => "btn btn-secondary btn-info btn-sm", :role => 'button', :tabindex => '0'%>
  
      <%= link_to '<i class="far fa-trash-alt"></i> Delete'.html_safe, @warriorknowledge, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-secondary btn-danger btn-sm", :role => 'button', :tabindex => '0'  %>
    </div>
<% end %>

</html>
